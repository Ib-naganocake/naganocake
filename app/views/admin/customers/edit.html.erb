<div class="container mt-5">
<p class="text-danger"><%= flash[:notice] %></p>
  <div class="row mt-2">
    <h3 class="px-4" style="background: #f3f3f3"><%= "#{@customer.family_name}#{@customer.first_name}さんの会員情報編集" %></h3>
  </div>

    <div>
    <% if @customer.errors.any? %>
      <h3><%= (@customer.errors.count) %> 件のエラーが発生しています。</h3>
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
    <div class="col-8">
      <div class="row">
        <table class="table table-borderless">
          <tr>
            <td class="col-md-4">会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td class="col-md-4"><%= f.label :family_name, "氏名" %></td>
            <td><%= f.text_field :family_name, autofocus: true, class: "form-control" %></td>
            <td><%= f.text_field :first_name, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-md-4"><%= f.label :family_name_kana, "フリガナ" %></td>
            <td><%= f.text_field :family_name_kana, class: "form-control" %></td>
            <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-md-4"><%= f.label :postal_code, "郵便番号" %></td>
            <td><%= f.text_field :postal_code, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-md-4"><%= f.label :address, "住所" %></td>
            <td colspan="2"><%= f.text_field :address, :size=> "50", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-md-4"><%= f.label :telephone_number, "電話番号" %></td>
            <td><%= f.text_field :telephone_number, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-md-4"><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-md-4">会員ステータス</td>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active_true, "有効" %>
              <%= f.radio_button :is_active, false, class: "ml-3" %>
              <%= f.label :is_active_false, "退会" %>
            </td>
          </tr>
        </table>
      </div>
      <div class="form-group offset-4">
        <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
      </div>
    </div>
  <% end %>
</div>
