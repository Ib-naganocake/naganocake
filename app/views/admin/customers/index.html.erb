<div class="container mt-5">
  <div class="row">
    <div class="offset-1 text-center">
      <h3 class="px-4" style="background: #f3f3f3">会員一覧</h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <table class="table border-bottom">
        <thead style="background: #f3f3f3">
          <tr>
            <th>会員ID</th>
            <th><u>氏名</u></th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><u><%= link_to "#{customer.family_name}#{customer.first_name}", admin_customer_path(customer),  class: "text-reset" %></u></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_active == true %>
                  <p class="text-success">有効</p>
                <% else %>
                  <p class="text-secondary">退会</p>
                <% end %>
              </td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @customers %>
</div>