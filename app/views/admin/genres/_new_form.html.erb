<%= form_with model: genre, url: admin_genres_path, local: true do |f| %>
  <div class="form-inline">
    <div class="row">
      <div class="form-group">
        <div>
          <%= f.label :name, "ジャンル名" %>
        </div>
        <div class="mr-5 ml-5">
          <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
      </div>
    </div>
  </div>
<% end %>
