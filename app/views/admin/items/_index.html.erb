<table class="table table-list">
  <thead class="title-background">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th class="pr-0">税抜価格</th>
      <th class="pr-5 pl-0">ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody class="border-bottom">
    <% items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item), class: "text-reset" %></td>
        <td class="pr-0"><%= number_to_currency(item.price_without_tax, format: "%n") %></td>
        <td class="pr-5 pl-0"><%= item.genre.name %></td>
        <td>
          <% if item.is_sales == true %>
            <p class="text-success"><strong><%= item_status_name(item) %></strong></p>
          <% else %>
            <p class="text-secondary"><strong><%= item_status_name(item) %></strong></p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>