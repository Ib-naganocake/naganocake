<div class="container py-5">
  <div class="row mt-3 mb-3 offset-1 text-center">
    <h3 class="px-4 title-background">商品一覧</h3>
  </div>

  <div class="row justify-content-end mb-3">
    <div class="col-2">
      <%= link_to '+', new_admin_item_path, class: "title-background btn rounded-circle border-right border-bottom" %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'index', items: @items %>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= paginate @items %>
  </div>
</div>
