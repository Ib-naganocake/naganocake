<div class="container py-5">
  <p class="text-success"><%= flash[:notice] %></p>
  <div class="row mt-2 mb-3 text-center">
    <div class="col-3">
      <h3 class="px-4 title-background">商品詳細</h3>
    </div>
  </div>
  <div class="row mx-auto">
    <div class="col-3">
      <%= image_tag @item.get_image(300,250) %>
    </div>
    <div class="col-6 offset-1">
      <table class="table">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td class="w-75"><%= simple_format(@item.description) %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>
            税込価格<br>
            (税抜価格)
          </td>
          <td class="pt-4">
            <%= number_to_currency(@item.add_tax_price, format: "%n") %>
            (<%= number_to_currency(@item.price_without_tax, format: "%n") %>)円
          </td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_sales == true %>
              <p class="text-success"><strong><%= item_status_name(@item) %></strong></p>
            <% else %>
              <p class="text-secondary"><strong><%= item_status_name(@item) %></strong></p>
            <% end %>
         </td>
        </tr>
      </table>
      <div class="text-center">
        <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success px-4" %>
      </div>
    </div>
  </div>
</div>