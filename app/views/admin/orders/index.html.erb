<div class="container mt-5">
  <div class="row">
    <div class="offset-1 text-center">
      <h3 class="px-4" style="background: #f3f3f3"><%= "#{customer_full_name(@order)}さんの注文履歴" %></h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-10 mx-auto">
      <table class="table">
        <thead style="background: #f3f3f3">
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @order.each do |order| %>
            <tr>
              <td><u><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order), class: "text-reset" %></u></td>
              <td><%= "#{order.customer.family_name}#{order.customer.first_name}" %></td>
              <td><%= calculate_order_total_amount(order) %></td>
              <td><%= order.transaction_status %> </td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @order %>
</div>