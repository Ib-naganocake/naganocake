<div class="container mt-5">
  <p class="<%= flash[:color] %>"><%= flash[:order_notice] %></p>
  <div class="row">
    <div class="offset-1 text-center">
      <h3 class="px-4" style="background: #f3f3f3">注文履歴詳細</h3>
    </div>
  </div>
  <%= render 'show', order: @order %>
  <p class="<%= flash[:color] %>"><%= flash[:order_detail_notice] %></p>
  <div class="row text-nowrap">
    <div class="col-8">
      <%= render 'order_detail', order: @order, order_detail: @order_detail %>
    </div>
    <div class="col-3 ml-5 mt-auto">
      <%= render 'order_total_amount', order: @order %>
  </div>
</div>