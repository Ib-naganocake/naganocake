<div class="container py-5">
  <p class="text-danger"><%= flash[:notice] %></p>
  <div class="row mt-3 mb-3 offset-1 text-center">
      <h3 class="px-4 title-background">管理者ログイン</h3>
  </div>

<%= form_with(model: resource, scope: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row justify-content-center">
  <div class="col-5">
    <table class="table table-borderless">
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %></td>
      </tr>
      <tr>
        <td><%= f.label :パスワード %></td>
        <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "ログイン", class: "btn btn-primary px-3" %></td>
      </tr>
    </table>
  </div>
</div>
<% end %>

<%= render "admin/shared/links" %>
</div>
