<div class="container">
  <div class="row m-4">
    <div class="col-3 text-center">
      <h2 style="background: #f3f3f3"> 管理者ログイン </h2>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row justify-content-center">
  <div class="col-5">
    <table class="table table-borderless">
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %></td>
      </tr>
      <tr>
        <td><%= f.label :パスワード %></td>
        <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "ログイン", class: "btn btn-primary px-3" %></td>
      </tr>
    </table>
  </div>
</div>
<% end %>

<%= render "admin/shared/links" %>
</div>
