<div class="container">
  <p class="text-success"><%= notice %></p>
  <div class="row m-4">
    <div class="col-4 text-center mt-3">
      <h2 style="background: #f3f3f3"> ショッピングカート </h2>
    </div>
    <% if @cart_items.present? %>
      <div class="col-7 text-right mt-3">
        <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, :class => "btn btn-danger ml-5", data: { confirm: "本当に空にしますか？" }  %>
      </div>
    <% end %>
  </div>

  <div class="row justify-content-center">
    <div class="col-10">
      <% if @cart_items.blank? %>
        <h4>カート内に商品はありません。</h4>
      <% else %>
        <%= render 'index', cart_items: @cart_items %>
      <% end %>
    </div>
  </div>

  <div class="row m-5">
    <div class="col-6">
      <div>
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary p-2 ml-5" %>
      </div>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
      <% if @cart_items.present? %>
        <table class="table table-bordered">
          <tr>
            <td>合計金額</td>
            <td>¥<%= @total_price.floor.to_s(:delimited) %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% if @cart_items.present? %>
      <div class="col-12 text-center">
        <%= link_to "情報入力に進む", new_order_path, :class => "btn btn-success" %>
      </div>
    <% end %>
</div>