<div class="container">
  <p class="text-success"><%= notice %></p>
  <div class="row m-4">
    <div class="col-3 text-center">
      <h2 style="background: #f3f3f3"> マイページ </h2>
    </div>
  </div>

  <div class="row mb-2">
    <h2 class="col-md-2">登録情報</h2>
    <p>
      <%= link_to "編集する", information_edit_customers_path, class: "btn btn-success ml-5 pl-5 pr-5" %>
    </p>
  </div>

  <div class="row mb-4">
    <table class="table table-bordered col-8">
      <tr>
        <td class="bg-light">氏名</td>
        <td><%= @customer.family_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <td class="bg-light">カナ</td>
        <td><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td class="bg-light">郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td class="bg-light">住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="bg-light">電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td class="bg-light">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>

  <div class="row">
    <h3 class="col-md-2">配送先</h3>
    <p>
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary ml-5 pl-5 pr-5" %>
    </p>
  </div>

  <div class="row">
    <h3 class="col-md-2">注文履歴</h3>
    <p>
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary ml-5 pl-5 pr-5" %>
    </p>
  </div>
</div>