<div class="d-flex">
  <h3 class="mb-0 font-weight-bold">商品一覧</h3>
  <h6 class="mb-0 font-weight-bold mt-auto ml-1">(全<%= all_items.count %>件)</h6>
</div>
<div class="d-flex flex-wrap mt-3">
  <% items.each do |item| %>
    <div class="m-2">
      <div style="width: 200px; height: 150px;">
        <%= link_to item_path(item) do %>
          <%= image_tag item.get_image(200,150) %>
        <% end %>
      </div> 
      <% if item.is_sales == false %>
          <h5 class="text-danger m-0">売り切れ</h5>
        <% end %>
      <h5>
        <%= link_to item_path(item) do %>
        <%= item.name %>
        <% end %>
      </h5>
      <p>
        ￥<%= item.price_without_tax %>
      </p>
    </div>
  <% end %>
</div>
<div class="w-100 text-center">
  <%= paginate items %>
</div>