<div class="container mt-5">
  <div class="row">
    <div class="col-2">
      <div class="border text-center">
        <p class="border-bottom"><strong>ジャンル検索</strong></p>
        <ul class="px-3 py-2 text-left" style="list-style: none;">
          <li class="mb-1">puding</li>
          <li class="mb-1">puding</li>
          <li class="mb-1">puding</li>
        </ul>
      </div>
    </div>
    <div class="col-10">
      <div class="d-flex">
        <h3 class="mb-0">商品一覧</h3>
        <h6 class="mb-0 mt-auto ml-1">(全<%= @all_items.count %>件)</h6>
      </div>
      <div class="d-flex flex-wrap mt-3">
        <% @items.each do |item| %>
          <div class="m-2">
            <div style="width: 200px; height: 150px; background: red;"></div> 
            <h5>
              <%= link_to item_path(item) do %>
              <%= item.name %>
              <% end %>
            </h5>
            <p>￥<%= item.price_without_tax %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>