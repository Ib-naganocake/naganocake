<div class="container mt-5">
  <div class="row">
    <div class="col-2">
      <%= render 'genre_list', genres: @genres %>
    </div>
    <div class="col-10">
    <div class="d-flex">
      <h3 class="mb-0 font-weight-bold">商品一覧</h3>
      <h6 class="mb-0 font-weight-bold mt-auto ml-1">(全<%= @all_items.count %>件)</h6>
    </div>
    <div class="d-flex flex-wrap mt-3">
      <%= render 'index', items: @items %>
    </div>
    <div class="w-100 d-flex justify-content-center">
      <%= paginate @items %>
    </div>
    </div>
  </div>
</div>