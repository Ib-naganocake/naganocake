<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-2">
      <%= render 'genre_list', genres: @genres %>
    </div>
    <div class="col-10">
      <div class="row">
        <div class="col-5">
          <%= image_tag @item.get_image(300,250) %>
        </div>
        <div class="col-7">
          <h2><%= @item.name %></h2>
          <div class="h-50"><%= simple_format(@item.description) %></div>
          <div class="d-flex">
            <h3 class="mb-0 font-weight-bold">￥<%= @item.add_tax_price.to_s(:delimited) %></h3>
            <h6 class="mb-1 font-weight-bold mt-auto ml-1">(税込み)</h6>
          </div>
          <div class="mt-5">
            <%= render 'public/cart_items/form', cart_item: @cart_item, item: @item %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div style="height: 100px;"></div>
  </div>
</div>