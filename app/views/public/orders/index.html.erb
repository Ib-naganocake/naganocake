<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="text-center w-25 ml-5 mb-4">
        <h3 style="background: #f3f3f3;">注文履歴一覧</h3>
      </div>
      <table class="table table-bordered border-dark">
        <tr style="background: #f3f3f3;">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
            <th>
              〒<%= order.postal_code %></br>
              <%= order.shipping_address %></br>
              <%= order.name %>
            </th>
            <th>
              <ul class="p-0" style="list-style: none;">
                <% order.items.each do |item| %>
                  <li class="m-0"><%= item.name %></li>
                <% end %>
              </ul>
            </th>
            <th><%= order.total_price %></th>
            <th><%= order.transaction_status_i18n %></th>
            <th>
              <%= link_to '表示する', order_path(order), class:"btn btn-info" %>
            </th>
          </tr>
        <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>