<div class="container mt-5">
  <div class="text-center w-25 ml-5 mb-4">
    <h3 style="background: #f3f3f3;">注文履歴一覧</h3>
  </div>
  <div class="row">
    <div class="col-8">
      <h5 class="font-weight-bold">注文情報</h5>
      <table class="table table-bordered">
        <tr>
          <td style="background: #f3f3f3;">注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td style="background: #f3f3f3;">配送先</td>
          <td>
            〒<%= @order.postal_code %></br>
            <%= @order.shipping_address %></br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td style="background: #f3f3f3;">支払い方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td style="background: #f3f3f3;">ステータス</td>
          <td><%= @order.transaction_status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-4">
      <h5 class="font-weight-bold">請求情報</h5>
      <table class="table table-bordered">
        <tr>
          <td style="background: #f3f3f3;">商品合計</td>
          <td><%= (@order.total_price - @order.shipping_fee).to_s(:delimited) %></td>
        </tr>
        <tr>
          <td style="background: #f3f3f3;">配送料</td>
          <td><%= @order.shipping_fee.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td style="background: #f3f3f3;">ご請求額</td>
          <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-10">
      <h5 class="font-weight-bold">請求情報</h5>
      <table class="table table-bordered">
        <tr style="background: #f3f3f3;">
          <td>商品</td>
          <td>単価(税込み)</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price_including_tax %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.item %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>