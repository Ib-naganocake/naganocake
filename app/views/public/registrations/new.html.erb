<div class="container py-5">
  <p class="text-danger"><%= notice %></p>
  <div class="row mt-3 mb-3 offset-1 text-center">
    <h3 class="px-4 title-background">新規会員登録</h3>
  </div>

  <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row justify-content-center">
    <div class="col-10">

      <div class="field form-group">
        <div class="form-inline">
          <%= f.label :"名前", class: "mr-3 control-label col-md-2 justify-content-start" %>
          <%= f.label :"(姓)", class: "ml-2 mr-5 control-label" %>
          <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder: "令和", class: "form-control mr-4" %>
          <%= f.label :"(名)", class: "ml-1 mr-4 control-label" %>
          <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "道子", class: "form-control ml-3" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="form-inline">
          <%= f.label :"フリガナ", class: "mr-2 control-label col-md-2 justify-content-start" %>
          <%= f.label :"(セイ)", class: "mr-3 control-label col-md-1" %>
          <%= f.text_field :family_name_kana, placeholder: "レイワ", class: "form-control" %>
          <%= f.label :"(メイ)", class: "mr-3 control-label col-md-1" %>
          <%= f.text_field :first_name_kana, placeholder: "ミチコ", class: "form-control" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="form-inline">
          <%= f.label :"メールアドレス", class: "col-md-3 justify-content-start" %>
          <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control ml-4" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="form-inline">
          <%= f.label :"郵便番号（ハイフンなし）", class: "col-md-3 justify-content-start" %>
          <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000", class: "form-control ml-4" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="form-inline">
          <%= f.label :"住所", class: "col-md-3 justify-content-start" %>
          <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", :size=> "55", class: "form-control ml-4" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="form-inline">
          <%= f.label :"電話番号（ハイフンなし）", class: "col-md-3 justify-content-start" %>
          <%= f.text_field :telephone_number, autocomplete: "tel", placeholder: "0000000000", class: "form-control ml-4" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="form-inline">
          <%= f.label :"パスワード(6文字以上)", class: "col-md-3 justify-content-start" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control ml-4" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="form-inline">
          <%= f.label :"パスワード（確認用）", class: "col-md-3 justify-content-start" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control ml-4" %>
        </div>
      </div>

      <div class="actions">
        <%= f.label :" ", class: "col-md-3 justify-content-start" %>
        <%= f.submit "新規登録", class: "btn btn-success ml-4 pr-5 pl-5" %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row m-4">
    <div class="text-center offset-1">
      <h4 class="px-4 title-background">既に登録済みの方</h4>
      <div class="ml-5">
        <%= link_to "こちら", new_customer_session_path %>からログインしてください
      </div>
    </div>
  </div>
</div>